<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="317dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:background="#dedede"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.112">


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Currency"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/l1"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView">

            <TextView
                android:id="@+id/donvi1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="đ"
                android:textSize="50dp" />

            <TextView
                android:id="@+id/enter_num"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="9"
                android:gravity="center_vertical"
                android:text="0"
                android:textColor="@color/cardview_dark_background"
                android:textSize="50dp" />
        </LinearLayout>

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/l1" />

        <LinearLayout
            android:id="@+id/l2"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinner1">

            <TextView
                android:id="@+id/donvi2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="đ"
                android:textSize="50dp" />

            <TextView
                android:id="@+id/enter_num2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="9"
                android:gravity="center_vertical"
                android:text="0"
                android:textColor="@color/cardview_dark_background"
                android:textSize="50dp" />
        </LinearLayout>

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/l2" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:columnCount="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:rowCount="5">

        <Button
            android:id="@+id/CE"
            style="@style/button_gray"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="5dp"
            android:onClick="clearNum"
            android:text="CE"
            app:layout_column="0"
            app:layout_row="0" />

        <Button
            android:id="@+id/C"
            style="@style/button_gray"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="5dp"
            android:onClick="clearAll"
            android:text="C"
            app:layout_column="1"
            app:layout_row="0" />

        <Button
            android:id="@+id/BE"
            style="@style/button_gray"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="5dp"
            android:onClick="clearOne"
            android:text="BE"
            app:layout_column="2"
            app:layout_row="0" />

        <Button
            android:id="@+id/n7"
            style="@style/button_white"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:onClick="enterNumber"
            android:text="7"
            app:layout_column="0"
            app:layout_row="1" />

        <Button
            android:id="@+id/n8"
            style="@style/button_white"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:onClick="enterNumber"
            android:text="8"
            app:layout_column="1"
            app:layout_row="1" />

        <Button
            android:id="@+id/n9"
            style="@style/button_white"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:onClick="enterNumber"
            android:text="9"
            app:layout_column="2"
            app:layout_row="1" />


        <Button
            android:id="@+id/n4"
            style="@style/button_white"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:onClick="enterNumber"
            android:text="4"
            app:layout_column="0"
            app:layout_row="2" />

        <Button
            android:id="@+id/n5"
            style="@style/button_white"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:onClick="enterNumber"
            android:text="5"
            app:layout_column="1"
            app:layout_row="2" />

        <Button
            android:id="@+id/n6"
            style="@style/button_white"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:onClick="enterNumber"
            android:text="6"
            app:layout_column="2"
            app:layout_row="2" />

        <Button
            android:id="@+id/n1"
            style="@style/button_white"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:onClick="enterNumber"
            android:text="1"
            app:layout_column="0"
            app:layout_row="3" />

        <Button
            android:id="@+id/n2"
            style="@style/button_white"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:onClick="enterNumber"
            android:text="2"
            app:layout_column="1"
            app:layout_row="3" />

        <Button
            android:id="@+id/n3"
            style="@style/button_white"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:onClick="enterNumber"
            android:text="3"
            app:layout_column="2"
            app:layout_row="3" />

        <Button
            android:id="@+id/n0"
            style="@style/button_white"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:onClick="enterNumber"
            android:text="0"
            app:layout_column="1"
            app:layout_row="4" />

        <Button
            android:id="@+id/dot"
            style="@style/button_gray"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="."
            app:layout_column="2"
            app:layout_row="4" />

    </androidx.gridlayout.widget.GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>